<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:descendantFocusability="beforeDescendants"
    android:filterTouchesWhenObscured="true"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.breadwallet.presenter.activities.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/burger"
                android:paddingBottom="4dp">
            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/white_eca" />

            <com.breadwallet.presenter.customviews.BaseTextView
                android:id="@+id/total_assets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:text="@string/HomeScreen.totalAssets"
                android:textColor="@color/text_total_assets_label"
                app:brdFont="@string/Font.CircularPro_Bold" />

            <com.breadwallet.presenter.customviews.BaseTextView
                android:id="@+id/total_assets_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_assets_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:brdFont="@string/Font.CircularPro_Bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_toolbar_layout1"
            android:layout_below="@id/home_header">

            <LinearLayout
                android:id="@+id/list_group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/bread_margin"
                android:paddingTop="@dimen/bread_margin"
                android:paddingEnd="@dimen/bread_margin">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_wallet_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tx_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_toolbar_layout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:elevation="0dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <com.breadwallet.presenter.customviews.BRButton
                android:id="@+id/send_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1.5"
                android:background="@color/currency_buttons_color"
                android:text="@string/Button.send"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                app:brdFont="@string/Font.CircularPro_Bold"
                app:buttonType="4"
                app:hasShadow="false"
                app:isBreadButton="true" />


            <com.breadwallet.presenter.customviews.BRButton
                android:id="@+id/receive_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_alignEnd="@+id/bottom_toolbar_layout1"
                android:layout_alignBottom="@+id/bottom_toolbar_layout1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1.5"
                android:background="@color/currency_buttons_color"
                android:text="@string/Button.receive"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                app:brdFont="@string/Font.CircularPro_Bold"
                app:buttonType="4"
                app:hasShadow="false"
                app:isBreadButton="true" />

            <com.breadwallet.presenter.customviews.BRButton
                android:id="@+id/sell_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="0"
                android:background="@color/currency_buttons_color"
                android:paddingTop="3dp"
                android:text="Sell"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:visibility="gone"
                app:brdFont="@string/Font.CircularPro_Bold"
                app:buttonType="4"
                app:hasShadow="false"
                app:isBreadButton="true" />

        </LinearLayout>

        <com.breadwallet.presenter.customviews.BRNotificationBar
            android:id="@+id/notification_bar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="4dp"
            android:background="@color/blue"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:breadText="@string/Alert.noInternet"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp" />

    </RelativeLayout>

</RelativeLayout>
